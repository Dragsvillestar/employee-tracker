doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title Home
    link(rel="stylesheet" href="../stylem2.css")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/js/all.min.js" crossorigin="anonymous")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet")
    link(rel="stylesheet" href="https://unpkg.com/leaflet/dist/leaflet.css")

  body
    nav.navbar.navbar-expand-lg.navbar-light.bg-light.shadow-sm.px-4
      .container-fluid.d-flex.justify-content-end
        .notify-container#notificationsContainer
          .icon-container.position-relative
            img.img-fluid(src="/image/transparent bell.jpg" alt="Notifications" style="width: 30px; height: 30px;")
            span.badge.bg-danger.text-white.rounded-circle 0

    .parent
      .content
        .row.mx-0.shadow#overall
          .col-md-1.bg-dark.d-flex.flex-column.align-items-center.justify-content-evenly#menu(style="height: 100%")
              .menu-item.text-center.text-white.my-3#home-btn
                i.fas.fa-home.fa-2x
                p.menu-text Home
              .menu-item.text-center.text-white.my-3#profile
                i.fas.fa-user.fa-2x
                p.menu-text Profile
              .menu-item.text-center.text-white.my-3.p-3#subOrds
                i.fas.fa-users.fa-2x
                p.menu-text Subordinates
              .menu-item.text-center.text-white.my-3#myReport
                i.fas.fa-file-alt.fa-2x
                p.menu-text My Report
              .menu-item.text-center.text-white.my-3#logOut
                i.fas.fa-sign-out-alt.fa-2x(style="cursor: pointer;")
                p.menu-text Logout
              .menu-item.text-center.text-white.my-3#sidebarToggle(data-bs-toggle="offcanvas" data-bs-target="#sidebarMenu")
                i.fas.fa-bars.fa-2x(style="cursor: pointer;")
                p.menu-text More

          .col-md-11(style="height: 100%; padding-bottom: 80px")#right-side
            .d-flex.flex-column.align-items-center.justify-content-start.mx-auto.py-4#welcomeDiv(style="height: 100%; background-color: #D3D3D3;gap:10px")
                #welcome-message.mb-5(style="height: 20%; width: 100%;")
                  p.text-center Welcome,
                  p.text-center#name #{username}
                  input#user-id(type="hidden" value!=userId style="display: none;")             
                               
                .bg-light#locatorDiv.mx-auto.d-flex.flex-column.justify-content-center.align-items-center.mt-5(style="height: 80%; width: 100%;")
                  #map(style="height: 80%; width: 90%;")
                
                  #locationInfoDiv.p-3(style="height: 20%; width: 90%;")
                    h4#locationInfo.m-3.mx-auto

    // Offcanvas Sidebar
    .offcanvas.offcanvas-start#sidebarMenu(tabindex="-1" aria-labelledby="sidebarLabel")
      .offcanvas-header
        h5.offcanvas-title#sidebarLabel Menu
        button.btn-close(data-bs-dismiss="offcanvas" aria-label="Close")
      .offcanvas-body
        ul.list-group
          li.list-group-item#timeline
            i.fas.fa-stream.me-2
            | Timeline
          li.list-group-item#changePassword
            i.fas.fa-key.me-2
            | Records
          li.list-group-item#liveLocation
            i.fas.fa-map-marker-alt.me-2
            | Live Location
          li.list-group-item#registerEmployee
            i.fas.fa-user-plus.me-2
            | Register Employee

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous")
    script(src="https://www.gstatic.com/firebasejs/10.7.0/firebase-app-compat.js")
    script(src="https://www.gstatic.com/firebasejs/10.7.0/firebase-auth-compat.js")
    script(src="https://unpkg.com/leaflet/dist/leaflet.js")
    script(src="https://cdn.socket.io/4.5.4/socket.io.min.js")
    script(src="/manager-welcome.js")
